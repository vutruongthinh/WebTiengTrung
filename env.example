# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ms_hoa_chinese_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100MB

# Vietnamese Banking/Payment
VIETQR_API_KEY=your_vietqr_api_key
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret

# Default VIP Pricing (in VND)
DEFAULT_VIP_PRICE=2000000

# Course Pricing Configuration
ENABLE_INDIVIDUAL_PURCHASE=true
ENABLE_VIP_MEMBERSHIP=true

# Azure Storage (for video files)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER_NAME=course-videos

# Admin Configuration
ADMIN_EMAIL=admin@ms-hoa-chinese.com
ADMIN_PASSWORD=change_this_password

# CORS Configuration
FRONTEND_URL=http://localhost:3000
